{
  "name": "doc.build",
  "version": "1.0.0",
  "description": "Doc site build tools",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test:links:check": "find . -name \\*.md ! -path \"./node_modules/*\" ! -path \"./env/*\" -exec ./node_modules/markdown-link-check/markdown-link-check -v -c common/build_tools/linkchecker/link_check_conf.json {} \\; 2>&1 | tee linkchecker.out",
    "test:links:verify": "! grep -n '[âœ–]\\|ERROR' ./linkchecker.out",
    "test:links": "npm run test:links:check && npm run test:links:verify",
    "test:markdown:error": "node ./node_modules/markdownlint-cli/markdownlint.js --ignore 'env' --ignore 'node_modules' --config common/build_tools/markdownlint/lint-base-style.yml '**/*.md' 2>&1 | tee ./markdownlint.out",
    "test:markdown:info": "node ./node_modules/markdownlint-cli/markdownlint.js --ignore 'env' --ignore 'node_modules' --config common/build_tools/markdownlint/lint-info-style.yml '**/*.md' 2>&1 | tee ./markdownlint_info.out",
    "test:markdown:verify": "! grep -nE 'MD[0-9]+/.+' ./markdownlint.out",
    "test:markdown": "npm run test:markdown:error && npm run test:markdown:verify",
    "fix:markdown": "node ./node_modules/markdownlint-cli/markdownlint.js --fix --config common/build_tools/markdownlint/lint-base-style.yml '**/*.md'",
    "test": "npm run test:links && npm run test:markdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Consensys/doc.common.git"
  },
  "author": "Consensys",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Consensys/doc.common/issues"
  },
  "homepage": "https://github.com/Consensys/doc.common",
  "dependencies": {
    "markdown-link-check": "github:tcort/markdown-link-check",
    "markdownlint-cli": "0.23.2"
  },
  "devDependencies": {
    "markdownlint": "0.21.0"
  }
}
